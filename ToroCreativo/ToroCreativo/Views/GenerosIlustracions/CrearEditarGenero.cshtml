@model ToroCreativo.Models.Entities.Generos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Generos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Generos" asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idGenero" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">               
                @if (Model.idGenero == 0)
                {
                    <input asp-for="Estado" value="Habilitado" type="hidden" class="form-control" readonly />
                }
                else
                {
                    <input asp-for="Estado" type="hidden" class="form-control" readonly />
                }
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
