<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToroCreativo @ViewData["Title"]</title>
    <!--estilos librerias-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" />

    <!--estilos propios del proyecto-->
    <link rel="stylesheet" href="~/css/estilosgenerales.css" />
    <link rel="stylesheet" href="~/css/nav_admin.css" />
    <!--<link rel="stylesheet" href="~/css/Formularios.css" />-->
    </head>
    <body>
        <header>
            <div class="logotipo">
                <h4>Toro Creativo</h4>
            </div>
            <div class="sub-menu">
                <div class="notificaciones">
                    <i class="fas fa-bell" id="notificacion" onclick="mostrarnoti()"></i>
                </div>
                <div class="cuenta">
                    <a><i class="fas fa-user-circle" id="user" onclick="mostrarcuenta()"></i></a>
                </div>
            </div>
            <div class="box notifi-box" id="notificaciones-box">
                <h2>Notificaciones</h2>
                <div class="box-content notifi-item">
                    <a href="#" class="link">
                        <div class="icon">
                            <i class="fas fa-mail-bulk"></i>
                        </div>
                        <div class="text">
                            <p><span>Nombre del cliente</span> ha hecho un nuevo pedido</p>
                        </div>
                    </a>
                </div>
                <div class="box-content notifi-item visto">
                    <a href="#" class="link">
                        <div class="icon">
                            <i class="fas fa-comment"></i>
                        </div>
                        <div class="text">
                            <p><span>Nombre del cliente</span> ha comentado una ilustración</p>
                        </div>
                    </a>
                </div>

                <div class="box-content notifi-item">
                    <a href="#" class="link">
                        <div class="icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="text">
                            <p><span>Nombre del cliente</span> Ha Calificado un producto</p>
                        </div>
                    </a>
                </div>
                <div class="box-content notifi-item visto">
                    <a href="#" class="link">
                        <div class="icon">
                            <i class="fas fa-ban"></i>
                        </div>
                        <div class="text">
                            <p><span>Nombre del cliente</span> Ha cancelado un pedido</p>
                        </div>
                    </a>
                </div>
                <div class="box-content notifi-item visto">
                    <a href="#" class="link">
                        <div class="icon">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="text">
                            <p><span>Nombre del cliente</span> Ha montado el comprobante de pago de su pedido</p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="box cuenta-box" id="cuenta-box">

                <div class="box-content cuenta-item">
                    <a href="#" class="link">
                        <div class="icon">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="text">
                            <p><span>Nombre del usuario</span></p>
                            <p>Ver perfil</p>
                        </div>
                    </a>
                </div>
                <div class="box-content cuenta-item">
                    <a href="../../index.html" class="link">
                        <div class="icon">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <div class="text">
                            <p class="cerrar"><span>Cerrar Sesión</span></p>
                        </div>
                    </a>
                </div>

            </div>

        </header>
        <div class="menu">
            <a asp-area="" asp-controller="Inicio_Admin" asp-action="Index"><i class="fas fa-bars"></i><span>Inicio</span></a>
            <a asp-area="" asp-controller="Usuarios" asp-action="Index"><i class="fas fa-user"></i><span>Usuario</span></a>
            <a asp-area="" asp-controller="Clientes" asp-action="Index"><i class="fas fa-users"></i><span>Clientes</span></a>
            <a asp-area="" asp-controller="ProductosCategoria" asp-action="Index"><i class="fas fa-gifts"></i><span>Productos</span></a>
            <a asp-area="" asp-controller="Generos" asp-action="Index"><i class="fas fa-palette"></i><span>Ilustraciones</span></a>
            <a asp-area="" asp-controller="Ilustracions" asp-action="Index"><i class="fas fa-palette"></i><span>Ilustraciones2</span></a>
            <a asp-area="" asp-controller="Pedidos" asp-action="Index"><i class="fas fa-mail-bulk"></i><span>Pedidos</span></a>
            <a asp-area="" asp-controller="Pedidos" asp-action="VentaIndex"><i class="fas fa-coins"></i><span>Ventas</span></a>
            <a asp-area="" asp-controller="" asp-action=""><i class="fas fa-chart-line"></i><span>Informes</span></a>
        </div>
        <article>
            <div class="container">
                @RenderBody()
            </div>
        </article>
        <!--<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - ToroCreativo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
            -->
    <!--Scripts librerias-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="~/js/datatable.js"></script>




    <!-- Scripts del proyecto -->
    <script src="~/js/funcionesgenerales.js"></script>
    <script src="~/js/funcionesnav.js"></script>
    <script src="~/js/alertas.js"></script>


    @RenderSection("Scripts", required: false)
    </body>
</html>
