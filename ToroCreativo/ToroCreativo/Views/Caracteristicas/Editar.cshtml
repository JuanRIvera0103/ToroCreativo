@model ToroCreativo.Models.Entities.Caracteristica

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Caracteristica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="idCaracteristicas" class="form-control" readonly />
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input type="color" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idProducto" class="control-label"></label>
                <input asp-for="idProducto" class="form-control" readonly />
                <span asp-validation-for="idProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medida" class="control-label"></label>
                <select asp-for="Medida" class="form-control" asp-items="@(new SelectList(ViewBag.Tamaños, "idTamaño", "Medida"))"></select>
                <span asp-validation-for="Medida" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input asp-for="Estado" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
