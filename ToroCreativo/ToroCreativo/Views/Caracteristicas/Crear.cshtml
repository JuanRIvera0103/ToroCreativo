@model ToroCreativo.Models.Entities.Caracteristica

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear Característica</h2>
<hr />
<div class="row">
    <div class="col-5">
        <form asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idProducto" value="@ViewBag.Producto" class="form-control" readonly />
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <div class="form-group">
                            <label asp-for="Color" class="control-label"></label>
                            <input type="color" asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class="form-group">
                            <label asp-for="Medida" class="control-label"></label>
                            <select asp-for="Medida" class="form-control" asp-items="@(new SelectList(ViewBag.Tamaños, "idTamaño", "Medida"))">
                                <option value="">Seleccione una unidad de medida</option>
                            </select>
                            <span asp-validation-for="Medida" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </div>
                    <div class="col-4">
                        <a asp-controller="ProductosCategoria" asp-action="DetalleProducto" asp-route-id="@ViewBag.Producto" class="btn btn-secondary btn-block">Volver</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
