@model ToroCreativo.Models.Entities.Tamaño

@{
    ViewData["Title"] ="- "+ ViewData["Accion"] + "Medida";
}

<h1>@ViewData["Accion"] Medida</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="idTamaño" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="Medida" class="control-label"></label><span class="requerido">*</span>
                <input asp-for="Medida" class="form-control" placeholder="Ingrese una medida" />
                <span asp-validation-for="Medida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label><span class="requerido">*</span>
                <select asp-for="Categoria" asp-items="@(new SelectList(ViewBag.Categorias, "idCategoria", "Nombre"))" class="form-control"></select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        @if (Model.idTamaño == 0)
                        {
                            <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-warning btn-block">Editar</button>
                        }
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-secondary btn-block">Volver</a>
                    </div>
                </div>
            </div>            
        </form>
    </div>
</div>
