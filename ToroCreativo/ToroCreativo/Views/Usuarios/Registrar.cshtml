@model ToroCreativo.ViewModels.Usuario.RegistrarViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/registro.css" />
</head>

<body>

    <div class="container" id="container">
        <div class="form-container">            
            <form method="post" asp-action="Registrar">
                <h1>Crear Cuenta</h1>           
                <input asp-for="Email" type="email" placeholder="Correo" />
                <span asp-validation-for="Email" class="text-validation"></span>      
                <input type="password" asp-for="Password" placeholder="Contraseña" />
                <span asp-validation-for="Password" class="text-validation"></span>
                <input type="password" asp-for="ConfirmarPassword" placeholder="Confirmar Contraseña" />
                <span asp-validation-for="ConfirmarPassword" class="text-validation"></span>                
                <input asp-for="RolSeleccionado" class="form-control" value="@ViewBag.Roles" type="hidden">               
                <button type="submit">Registrarse</button>
            </form>
        </div>
        <div class="iniciar-sesion">
            <h2>¿Ya tienes una cuenta?</h2>
            <p>Bienvenido a la familia de Toro Creativo</p>
            <a class="ghost" asp-action="Login">Iniciar Sesión</a>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
         @if(TempData["Igual"] != null && TempData["Igual"].ToString().Equals("si")) {
            <text>

                Swal.fire({
                    icon: 'error',
                    title: 'El correo ingresado ya existe'
                  });

                 </text>
        }
    </script>
</body>

</html>

    

