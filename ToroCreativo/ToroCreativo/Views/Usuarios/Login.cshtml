@model ToroCreativo.ViewModels.Usuario.LoginViewModel
@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio Sesión</title>
    <!--estilos librerias-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/login.css"/>
</head>

<body>
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form method="post" asp-action="Login">
                <h1>Iniciar Sesión</h1>
                <span asp-validation-for="Email" class="text-danger small"></span>
                <input asp-for="Email" type="email" placeholder="Correo" />
                <span asp-validation-for="Password" class="text-danger small"></span>
                <input asp-for="Password" type="password" placeholder="Contraseña" />
                <a asp-action="OlvidePassword">Olvidé la contraseña</a>
                <button type="submit">Iniciar Sesión</button>
                <div asp-validation-summary="All" class="text-danger small"></div>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <div class="contenido">
                        <h1>¿No tienes cuenta?</h1>
                        <p>Crea tu cuenta y has parte de la familia de Toro Creativo</p>
                        <a class="ghost" asp-action="Registrar">Registrarme</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

