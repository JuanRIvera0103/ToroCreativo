@model ToroCreativo.Models.Entities.Entrada

@{
    ViewData["Title"] = "Editar";
}
<h2>Editar Entrada</h2>
<hr />
<div class="row">
    <div class="col-4">
        <form asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idEntrada" readonly />
            <input type="hidden" asp-for="idProducto" readonly />
            <input type="hidden" asp-for="Caracteristica" readonly />
            @foreach (var caracteristica in ViewBag.Caracteristicas)
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-3">
                            <label>Color Seleccionado: </label>
                            <input type="color" value="@caracteristica.Color" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <p><b>Unidad de medida: </b>@caracteristica.Medida</p>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <label asp-for="CantidadInicial" class="control-label"></label>
                <input asp-for="CantidadInicial" class="form-control" placeholder="Ingrese la entrada del producto" />
                <span asp-validation-for="CantidadInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <button type="submit" class="btn btn-warning btn-block">Editar</button>
                    </div>
                    <div class="col-4">
                        <a asp-controller="ProductosCategoria" asp-action="DetalleProducto" asp-route-id="@Model.idProducto" class="btn btn-secondary btn-block">Volver</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
