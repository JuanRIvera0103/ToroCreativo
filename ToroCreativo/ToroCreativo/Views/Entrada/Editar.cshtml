@model ToroCreativo.Models.Entities.Entrada

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/detalleproducto.css" />
<h1>Edit</h1>

<h4>Iva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idEntrada" />

            @foreach (var caracteristica in ViewBag.Caracteristicas)
            {
                <p>Unidad de medida: @caracteristica.Medida</p>
                <p>Color: <div class="color" style="background-color: @caracteristica.Color;"></div></p>
            }
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="F_Inicio" class="control-label"></label>
                <input asp-for="F_Inicio" class="form-control" readonly />
                <span asp-validation-for="F_Inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caracteristica" class="control-label"></label>
                <input asp-for="Caracteristica" class="form-control" readonly />
                <span asp-validation-for="Caracteristica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idProducto" class="control-label"></label>
                <input asp-for="idProducto" class="form-control" readonly />
                <span asp-validation-for="idProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
