@model ToroCreativo.Models.Entities.Entrada

@{
    ViewData["Title"] = "Create";
}


<link rel="stylesheet" href="~/css/detalleproducto.css" />
<h1>Create</h1>

<h4>Entradas</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var caracteristica in ViewBag.Caracteristicas)
            {
                <p>Unidad de medida: @caracteristica.Medida</p>
                <p>Color: <div class="color" style="background-color: @caracteristica.Color;"></div></p>
            }
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            @foreach (var caracteristica in ViewBag.Caracteristicas)
            {
                <div class="form-group">
                    <label asp-for="Caracteristica" class="control-label"></label>
                    <input type="hidden" asp-for="Caracteristica" value="@caracteristica.idCaracteristicas" class="form-control" readonly />
                    <span asp-validation-for="Caracteristica" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="idProducto" class="control-label"></label>
                    <input type="hidden" asp-for="idProducto" value="@caracteristica.idProducto" class="form-control" readonly />
                    <span asp-validation-for="idProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
