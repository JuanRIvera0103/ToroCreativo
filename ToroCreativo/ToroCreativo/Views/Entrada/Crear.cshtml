@model ToroCreativo.Models.Entities.Entrada

@{
    ViewData["Title"] = "Crear";    
}

<h2>Crear Entrada</h2>
<hr />
<div class="row">
    <div class="col-4">
        <form asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var caracteristica in ViewBag.Caracteristicas)
            {
                <input type="hidden" asp-for="Caracteristica" value="@caracteristica.idCaracteristicas" readonly />
                <input type="hidden" asp-for="idProducto" value="@caracteristica.idProducto" readonly />
                <div class="input-group">
                    <span class="input-group-text">Color Seleccionado:</span>
                    <input type="color" value="@caracteristica.Color" class="form-control" disabled />
                </div>
                <div class="input-group">
                    <span class="input-group-text">Unidad de medida: @caracteristica.Medida</span>                               
                </div>                
            }
            <div class="form-group">
                <label asp-for="CantidadInicial" class="control-label"></label>
                <input asp-for="CantidadInicial" class="form-control" placeholder="Ingrese la entrada del producto" />
                <span asp-validation-for="CantidadInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </div>
                    <div class="col-4">
                        @foreach (var caracteristica in ViewBag.Caracteristicas)
                        {
                            <a asp-controller="ProductosCategoria" asp-action="DetalleProducto" asp-route-id="@caracteristica.idProducto" class="btn btn-secondary btn-block">Volver</a>
                        }
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
