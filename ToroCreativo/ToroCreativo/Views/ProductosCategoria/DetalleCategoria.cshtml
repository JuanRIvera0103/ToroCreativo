@model IEnumerable<ToroCreativo.Clases.ProductoDetalle>
@{
    ViewData["Title"] = "- Detalle " + ViewBag.Categoria.Nombre;
}

<link rel="stylesheet" href="~/css/estilosgeneralesdetalle.css"/>
<div class="titulo titulo-detalle">
    <h1>@ViewBag.Categoria.Nombre</h1>
</div>

<div class="gestion">
    <h2>Productos </h2>
    <div class="registros">
        <table id="tabla" class="table table-hover ">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th>
                        <a asp-action="CrearEditarProducto"><i class="fas fa-plus" title="Agregar registro"></i></a>
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @if (item.Estado.Equals("Habilitado"))
                            {
                                <p class="text-success">@Html.DisplayFor(modelItem => item.Estado)</p>
                            }
                            else
                            {
                                <p class="text-danger">@Html.DisplayFor(modelItem => item.Estado)</p>
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria)
                        </td>
                        <td>
                            @if (item.Estado.Equals("Habilitado"))
                            {
                                <a asp-action="CambiarEstadoProducto" onclick="return CambiarEstadoRegistro()" asp-route-id="@item.idProductos">
                                    <i class="fas fa-check-circle text-success" title="Cambiar"></i>
                                </a>
                            }
                            else
                            {
                                <a asp-action="CambiarEstadoProducto" onclick="return CambiarEstadoRegistro()" asp-route-id="@item.idProductos">
                                    <i class="fas fa-times-circle text-danger" title="Cambiar"></i>
                                </a>
                            }

                        </td>

                        <td>
                            <a asp-action="CrearEditarProducto" asp-route-id="@item.idProductos">
                                <i class="fas fa-edit" title="Editar registro"></i>
                            </a>
                        </td>
                        <td>
                            <a asp-action="DetalleProducto" asp-route-id="@item.idProductos">
                                <i class="fas fa-search-plus" title="detalle registro"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

