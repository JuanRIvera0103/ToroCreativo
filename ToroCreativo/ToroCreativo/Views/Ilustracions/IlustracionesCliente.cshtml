@model IEnumerable<ToroCreativo.Clases.IlustracionDetalle>

@{
    Layout = "_LayoutCliente";
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="~/css/ilustraciones-cliente.css" />
<div id="ilustracion">
    <div class="vista">
        <div class="tab-content" id="pills-tabContent">
            @foreach (var item in Model)
            {
                <div class="tab-pane fade show active" id="@item.ImageName" role="tabpanel"
                     aria-labelledby="@item.ImageName">
                    <h3>@item.Nombre</h3>
                    <div class="imagen">
                        <img class="vista-ilustracion" src="@("~/imgIlustraciones/" + item.ImageName)" asp-append-version="true" width="400" height="200" />                
                    </div>
                    <div class="botones">

                    </div>
                </div>
            }
        </div>
        <div class="boton-detalle">
            <button id="verdetalle" onclick="verdetalle()">Ver Detalle</button>
        </div>
    </div>

    <div class="ilustraciones">
        <h1>Ilustraciones</h1>
        <div class="genero">
            <h2>Generos <i class="fa fa-chevron-down" onclick="mostrarcategorias()"></i></h2>
            <div class="generos" id="generos">
                <ul>
                    @foreach (var generos in ViewBag.Generos)
                    {
                        <li><a asp-action="IlustracionesCliente" asp-route-id="@generos.idGenero">@generos.Nombre</a></li>
                    }
                    
                </ul>
            </div>
        </div>
        <div class="items">
            <ul class="nav nav-pills" id="pills-tab" role="tablist">
                @foreach (var item in Model)
                {
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="@item.ImageName" data-toggle="pill" href="#@item.ImageName"
                           role="tab" aria-controls="@item.ImageName" aria-selected="true">
                            <img class="imagen-ilustracion" src="@("~/imgIlustraciones/" + item.ImageName)" asp-append-version="true" width="400" height="200" />                                                             
                        </a>
                    </li>
                }
                </ul>
        </div>
    </div>
    <div class="detalle" id="detalle">
        <i class="fas fa-times cerrar" onclick="verdetalle()"></i>
