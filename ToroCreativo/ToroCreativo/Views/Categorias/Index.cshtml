@model IEnumerable<ToroCreativo.Models.Entities.Categorias>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CrearEditar"><i class="fab fa-accessible-icon"></i>Create Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idCategoria">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idCategoria">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idCategoria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
